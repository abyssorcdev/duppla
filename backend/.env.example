PROJECT_NAME=Duppla API
VERSION=1.0.0
API_V1_STR=/api/v1

# Environment
ENV=dev
LOG_LEVEL=INFO

# Database
# Si usas una plataforma (Render, Railway), define DATABASE_URL directamente.
# Para desarrollo local, usa las variables individuales:
# DATABASE_URL=postgresql://user:pass@host:5432/duppla
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=duppla
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
# Si usas una plataforma (Render, Railway), define REDIS_URL directamente.
# Para desarrollo local, usa las variables individuales:
# REDIS_URL=redis://host:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security - API Keys (comma-separated)
# Generate secure keys for production: python -c "import secrets; print(secrets.token_urlsafe(32))"
VALID_API_KEYS=dev-key-123,test-key-456

# Webhook
# Get your unique URL from: https://webhook.site
WEBHOOK_URL=https://webhook.site/your-unique-url

# CORS (JSON array)
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Google OAuth (create credentials at https://console.cloud.google.com)
# Production: update Authorized redirect URIs in Google Cloud Console
#   https://YOUR-BACKEND.onrender.com/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# JWT
# Generate a strong secret: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Frontend URL (for OAuth redirects)
# Production: https://YOUR-FRONTEND.onrender.com
FRONTEND_URL=http://localhost:5173
